<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusSeats">

    <TextView
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:id="@+id/title_tv"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Kavali to Nellore Non-Stop"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:src="@drawable/car"
        android:id="@+id/redImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/title_tv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp" />
    <TextView
        android:textColor="#FFFF0000"
        android:layout_marginLeft="10dp"
        android:text="Reserved Seats"
        android:textSize="15dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@+id/redImg"
        android:layout_alignTop="@+id/title_tv"
        android:id="@+id/redTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/car"
        android:layout_alignTop="@+id/title_tv"
        android:id="@+id/greenImg"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="Available Seats"
        android:textSize="15dp"
        android:textColor="#FF4CAF52"
        android:layout_toRightOf="@+id/greenImg"
        android:layout_alignTop="@+id/title_tv"
        android:id="@+id/greenTv"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_seats"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/title_tv"
        android:layout_marginTop="145dp" />

    <!--<GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/datagrid"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:stretchMode="spacingWidthUniform"/>-->

</RelativeLayout>